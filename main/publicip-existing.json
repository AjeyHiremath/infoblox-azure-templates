{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "publicIPAddressName": {
      "type": "string"
    },
    "publicIPAddressType": {
      "type": "string"
    },
    "dnsPrefix": {
      "type": "string"
    },
    "publicIpRGName": {
      "type": "string"
    },
    "apiVersion": {
      "type": "string"
    }
  },
  "variables": {
    "publicIpId": "[resourceId(parameters('publicIpRGName'),concat('Microsoft.Network','/','publicIPAddresses'),parameters('publicIPAddressName'))]"
  },
  "resources": [],
  "outputs": {
    "publicIpId": {
      "value": "[variables('publicIpId')]",
      "type": "string"
    },
    "fqdn": {
      "value": "[reference(variables('publicIpId'),parameters('apiVersion')).dnsSettings.fqdn]",
      "type": "string"
    }
  }
}
